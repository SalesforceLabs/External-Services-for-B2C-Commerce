                <componentInstanceProperties>
                    <name>richTextValue</name>
                    <value>&lt;p&gt;&lt;strong style=&quot;font-size: 24px;&quot;&gt;Setup External Services for B2C Commerce&lt;/strong&gt;&lt;/p&gt;&lt;p&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;From B2C Commerce you will need the following:&lt;/span&gt;&lt;/p&gt;&lt;ol&gt;&lt;li&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Commerce API Client ID&lt;/span&gt;&lt;/li&gt;&lt;li&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Commerce API Secret Key&lt;/span&gt;&lt;/li&gt;&lt;li&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Organization ID&lt;/span&gt;&lt;/li&gt;&lt;li&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Short Code&lt;/span&gt;&lt;/li&gt;&lt;li&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Tenant ID&lt;/span&gt;&lt;/li&gt;&lt;/ol&gt;&lt;p&gt;&lt;a href=&quot;https://developer.salesforce.com/docs/commerce/commerce-api/guide/commerce-api-configuration-values.html&quot; rel=&quot;noopener noreferrer&quot; target=&quot;_blank&quot; style=&quot;font-size: 14px;&quot;&gt;&lt;strong&gt;Click here&lt;/strong&gt;&lt;/a&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt; to locate your Commerce API configuration values.&lt;/span&gt;&lt;/p&gt;&lt;table class=&quot;ql-table-blob&quot;&gt;&lt;thead&gt;&lt;tr&gt;&lt;th&gt;Configuration Value&lt;/th&gt;&lt;th&gt;Example&lt;/th&gt;&lt;/tr&gt;&lt;/thead&gt;&lt;tbody&gt;&lt;tr&gt;&lt;td&gt;Organization ID&lt;/td&gt;&lt;td&gt;f_ecom_abcd_001&lt;/td&gt;&lt;/tr&gt;&lt;tr&gt;&lt;td&gt;Short Code&lt;/td&gt;&lt;td&gt;qw1ert23&lt;/td&gt;&lt;/tr&gt;&lt;tr&gt;&lt;td&gt;Tenant ID&lt;/td&gt;&lt;td&gt;abcd_001&lt;/td&gt;&lt;/tr&gt;&lt;/tbody&gt;&lt;/table&gt;&lt;p&gt;&lt;br&gt;&lt;/p&gt;&lt;p&gt;&lt;strong style=&quot;font-size: 14px;&quot;&gt;Step 1&lt;/strong&gt;&lt;/p&gt;&lt;p&gt;&lt;a href=&quot;https://developer.salesforce.com/docs/commerce/commerce-api/guide/authorization-for-admin-apis.html&quot; rel=&quot;noopener noreferrer&quot; target=&quot;_blank&quot; style=&quot;font-size: 14px;&quot;&gt;&lt;strong&gt;Create a Commerce API Client ID and Secret Key&lt;/strong&gt;&lt;/a&gt;&lt;/p&gt;&lt;p&gt;&lt;br&gt;&lt;/p&gt;&lt;p&gt;&lt;strong style=&quot;font-size: 14px;&quot;&gt;Step 2&lt;/strong&gt;&lt;/p&gt;&lt;p&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Setup an &lt;/span&gt;&lt;a href=&quot;/lightning/setup/AuthProviders/home&quot; rel=&quot;noopener noreferrer&quot; target=&quot;_blank&quot; style=&quot;font-size: 14px;&quot;&gt;&lt;strong&gt;Auth Provider&lt;/strong&gt;&lt;/a&gt;&lt;/p&gt;&lt;p&gt;&lt;br&gt;&lt;/p&gt;&lt;ul&gt;&lt;li&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Provider Type: &lt;/span&gt;&lt;strong style=&quot;font-size: 14px;&quot;&gt;B2CAuthProvider&lt;/strong&gt;&lt;/li&gt;&lt;li&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Name: &lt;/span&gt;&lt;strong style=&quot;font-size: 14px;&quot;&gt;B2C&lt;/strong&gt;&lt;/li&gt;&lt;li&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;URL Suffix:&lt;/span&gt;&lt;strong style=&quot;font-size: 14px;&quot;&gt; B2C&lt;/strong&gt;&lt;/li&gt;&lt;li&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Access Token URL: https://account.demandware.com/dw/oauth2/access_token&lt;/span&gt;&lt;/li&gt;&lt;li&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Auth Provider Name: &lt;/span&gt;&lt;strong style=&quot;font-size: 14px;&quot;&gt;B2C&lt;/strong&gt;&lt;/li&gt;&lt;li&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Callback URL&lt;/span&gt;&lt;strong style=&quot;font-size: 14px;&quot;&gt;: &lt;/strong&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;https://{YOUR_SALESFORCE_DOMAIN}.my.salesforce.com/services/authcallback/B2C&lt;/span&gt;&lt;/li&gt;&lt;li&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Client ID: Client ID created in &lt;/span&gt;&lt;strong style=&quot;font-size: 14px;&quot;&gt;Step 1&lt;/strong&gt;&lt;/li&gt;&lt;li&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Client Secret: Client Secret Key created in &lt;/span&gt;&lt;strong style=&quot;font-size: 14px;&quot;&gt;Step 1&lt;/strong&gt;&lt;/li&gt;&lt;li&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Scope: SALESFORCE_COMMERCE_API:{tenantId} sfcc.customerlists.rw&lt;/span&gt;&lt;/li&gt;&lt;li&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Execute Registration As: Pick a valid user&lt;/span&gt;&lt;/li&gt;&lt;/ul&gt;&lt;p&gt;&lt;strong style=&quot;font-size: 14px;&quot;&gt;Step 3&lt;/strong&gt;&lt;/p&gt;&lt;p&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Log in to &lt;/span&gt;&lt;a href=&quot;https://account.demandware.com/&quot; rel=&quot;noopener noreferrer&quot; target=&quot;_blank&quot; style=&quot;font-size: 14px;&quot;&gt;&lt;strong&gt;Account Manager&lt;/strong&gt;&lt;/a&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt; and add the Callback URL specified in &lt;/span&gt;&lt;strong style=&quot;font-size: 14px;&quot;&gt;Step 2&lt;/strong&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;.&lt;/span&gt;&lt;/p&gt;&lt;p&gt;&lt;br&gt;&lt;/p&gt;&lt;ol&gt;&lt;li&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Log in to &lt;/span&gt;&lt;a href=&quot;https://account.demandware.com/&quot; rel=&quot;noopener noreferrer&quot; target=&quot;_blank&quot; style=&quot;font-size: 14px;&quot;&gt;&lt;strong&gt;Account Manager&lt;/strong&gt;&lt;/a&gt;&lt;/li&gt;&lt;li&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Click &lt;/span&gt;&lt;strong style=&quot;font-size: 14px;&quot;&gt;API Client&lt;/strong&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt; from the left navigation&lt;/span&gt;&lt;/li&gt;&lt;li&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Click on the Client ID you created in &lt;/span&gt;&lt;strong style=&quot;font-size: 14px;&quot;&gt;Step 1&lt;/strong&gt;&lt;/li&gt;&lt;li&gt;I&lt;span style=&quot;font-size: 14px;&quot;&gt;n the &lt;/span&gt;&lt;strong style=&quot;font-size: 14px;&quot;&gt;Redirect URIs&lt;/strong&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt; section, add the Callback URL from &lt;/span&gt;&lt;strong style=&quot;font-size: 14px;&quot;&gt;Step 2&lt;/strong&gt;&lt;/li&gt;&lt;li&gt;Click&lt;strong&gt; Save&lt;/strong&gt;&lt;/li&gt;&lt;/ol&gt;&lt;p&gt;&lt;strong style=&quot;font-size: 14px;&quot;&gt;Step 4&lt;/strong&gt;&lt;/p&gt;&lt;p&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Configure the Salesforce Platform to view Account Manager as a trusted site.&lt;/span&gt;&lt;/p&gt;&lt;ol&gt;&lt;li&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Include an entry in &lt;/span&gt;&lt;a href=&quot;/lightning/setup/SecurityRemoteProxy/home&quot; rel=&quot;noopener noreferrer&quot; target=&quot;_blank&quot; style=&quot;font-size: 14px;&quot;&gt;&lt;strong&gt;Remote Site Settings&lt;/strong&gt;&lt;/a&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;&amp;nbsp;to point to Account Manager: https://account.demandware.com&lt;/span&gt;&lt;/li&gt;&lt;/ol&gt;&lt;p&gt;&lt;strong style=&quot;font-size: 14px;&quot;&gt;Step 5&lt;/strong&gt;&lt;/p&gt;&lt;p&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Setup a &lt;/span&gt;&lt;a href=&quot;/lightning/setup/NamedCredential/home&quot; rel=&quot;noopener noreferrer&quot; target=&quot;_blank&quot; style=&quot;font-size: 14px;&quot;&gt;&lt;strong&gt;Named Credential&lt;/strong&gt; &lt;/a&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;referencing Auth Provider&lt;/span&gt;&lt;/p&gt;&lt;p&gt;&lt;br&gt;&lt;/p&gt;&lt;ul&gt;&lt;li&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Label: &lt;/span&gt;&lt;strong style=&quot;font-size: 14px;&quot;&gt;B2C Commerce Customer API&lt;/strong&gt;&lt;/li&gt;&lt;li&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Name: &lt;/span&gt;&lt;strong style=&quot;font-size: 14px;&quot;&gt;B2C_Commerce_Customer_API&lt;/strong&gt;&lt;/li&gt;&lt;li&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;URL: https://{shortCode}.api.commercecloud.salesforce.com/customer/customers/v1&lt;/span&gt;&lt;/li&gt;&lt;li&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Identity Type: &lt;/span&gt;&lt;strong style=&quot;font-size: 14px;&quot;&gt;Named Principal&lt;/strong&gt;&lt;/li&gt;&lt;li&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Authentication Protocol: &lt;/span&gt;&lt;strong style=&quot;font-size: 14px;&quot;&gt;OAuth 2.0&lt;/strong&gt;&lt;/li&gt;&lt;li&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Authentication Provider: Select the Auth Provider from &lt;/span&gt;&lt;strong style=&quot;font-size: 14px;&quot;&gt;Step 2 &lt;/strong&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;(B2C).&lt;/span&gt;&lt;/li&gt;&lt;li&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Scope: SALESFORCE_COMMERCE_API:{tenantId} sfcc.customerlists sfcc.customerlists.rw&lt;/span&gt;&lt;/li&gt;&lt;li&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Generate Authorization Header: Checked&lt;/span&gt;&lt;/li&gt;&lt;/ul&gt;&lt;p&gt;&lt;strong style=&quot;font-size: 14px;&quot;&gt;Step 6&lt;/strong&gt;&lt;/p&gt;&lt;p&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Check that the &lt;/span&gt;&lt;a href=&quot;/lightning/setup/ExternalServices/home&quot; rel=&quot;noopener noreferrer&quot; target=&quot;_blank&quot; style=&quot;font-size: 14px;&quot;&gt;&lt;strong&gt;External Service&lt;/strong&gt;&lt;/a&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt; is referencing your Named Credential configured in Step 5.&lt;/span&gt;&lt;/p&gt;&lt;p&gt;&lt;br&gt;&lt;/p&gt;&lt;p&gt;&lt;strong style=&quot;font-size: 14px;&quot;&gt;Step 7&lt;/strong&gt;&lt;/p&gt;&lt;p&gt;&lt;span style=&quot;font-size: 14px;&quot;&gt;Update or create Flows using external service actions as desired. Included is a Contact Trigger to search B2C Commerce for matching customers.&lt;/span&gt;&lt;/p&gt;</value>
